@using ProdsAndCats.Models
@model Association

<h1>@ViewBag.ProductToShow.Name</h1>

<h3>Categories</h3>
<ul>
  @{
    foreach(var i in ViewBag.ProductToShow.Associations)
    {
    <Li>@i.CategoryAssociated.Name</Li>
    }
  }
</ul>

<div> 
  <form asp-action="CreateAssociationForProduct" asp-controller="Home" method="post">
    <select asp-for="CategoryId">
      @{
        foreach(var cp in ViewBag.CategoriesProductDoesNotHave)
        {
          <option value="@cp.CategoryId">@cp.Name</option>          
        }        
      }      
    </select>
    <input asp-for="ProductId" type="hidden" value="@ViewBag.ProductToShow.ProductId">
    <input type="submit" value="Add Category" class="btn btn-primary">
  </form>
</div>